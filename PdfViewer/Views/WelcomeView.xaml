<mah:MetroWindow
    x:Class="PdfViewer.Views.WelcomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:PdfViewer.Helpers.Converters"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    Title="PDF Viewer"
    Width="800"
    Height="450"
    GlowBrush="{DynamicResource MahApps.Brushes.Gray}"
    WindowStartupLocation="CenterScreen">

    <mah:MetroWindow.Resources>
        <converters:Base64ToImageConverter x:Key="Base64ToImageConverter" />
        <converters:SelectedBackgroundConverter x:Key="SelectedBackgroundConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </mah:MetroWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Верхняя панель с кнопками  -->
        <StackPanel
            Grid.Row="0"
            Margin="32,24,32,0"
            Orientation="Vertical">
            <StackPanel HorizontalAlignment="Left" Orientation="Vertical">
                <Button
                    Width="180"
                    Padding="12,6"
                    Command="{Binding OpenPdfCommand}">
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <iconPacks:PackIconFontAwesome
                            Width="24"
                            Height="24"
                            Margin="0,0,8,0"
                            Kind="FilePdfSolid" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Text="Открыть PDF файл" />
                    </StackPanel>
                </Button>
            </StackPanel>
            <TextBlock
                MaxWidth="280"
                Margin="0,10,0,10"
                HorizontalAlignment="Center"
                FontSize="16"
                Foreground="{DynamicResource MahApps.Brushes.AccentBase}"
                Text="{Binding Filename, StringFormat='Выбран файл: {0}'}"
                TextTrimming="CharacterEllipsis"
                TextWrapping="NoWrap" />
            <StackPanel
                Margin="0,0,0,12"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <Button
                    Margin="0,0,10,0"
                    Command="{Binding SaveSelectedCommand}"
                    Content="Сохранить страницу" />
                <Button
                    Margin="0,0,10,0"
                    Command="{Binding RasterizeSelectedCommand}"
                    Content="Растеризовать" />
                <Button
                    Margin="0,0,10,0"
                    Command="{Binding DeleteSelectedCommand}"
                    Content="Удалить" />
            </StackPanel>
        </StackPanel>

        <!--  Сетка страниц  -->
        <ScrollViewer
            Grid.Row="1"
            Margin="32,0,32,32"
            Padding="5"
            VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Pages}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Width="120"
                            Height="150"
                            Margin="12"
                            Background="{Binding IsSelected, Converter={StaticResource SelectedBackgroundConverter}}"
                            BorderBrush="{DynamicResource MahApps.Brushes.TextBox.Border}"
                            BorderThickness="1"
                            ClipToBounds="True"
                            CornerRadius="18"
                            SnapsToDevicePixels="True">
                            <Grid>
                                <CheckBox
                                    Width="22"
                                    Height="22"
                                    Margin="6"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Panel.ZIndex="2"
                                    IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                    ToolTip="Выбрать страницу" />
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="32" />
                                        <!--  строка под надпись  -->
                                    </Grid.RowDefinitions>
                                    <Image
                                        Grid.Row="0"
                                        Margin="12,8,12,4"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Stretch"
                                        Source="{Binding PageThumbnail, Converter={StaticResource Base64ToImageConverter}}"
                                        Stretch="UniformToFill" />
                                    <Border
                                        Grid.Row="1"
                                        Margin="0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Bottom"
                                        Background="#FFF"
                                        CornerRadius="0,0,12,12">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="#444"
                                            Text="{Binding PageNumber, StringFormat=Страница {0}}" />
                                    </Border>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>

                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!--  Прелоадер  -->
        <Grid
            Grid.RowSpan="2"
            Background="#80000000"
            IsHitTestVisible="{Binding IsLoading}"
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <mah:ProgressRing
                    Width="70"
                    Height="70"
                    IsActive="True" />
                <TextBlock
                    Margin="0,18,0,0"
                    HorizontalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Загрузка PDF..." />
            </StackPanel>
        </Grid>
    </Grid>
</mah:MetroWindow>