<mah:MetroWindow
    x:Class="PdfViewer.Views.WelcomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:PdfViewer.Helpers.Converters"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    Title="PDF Viewer"
    WindowState="Maximized"
    Width="800"
    Height="450"
    GlowBrush="{DynamicResource MahApps.Brushes.Gray}"
    WindowStartupLocation="CenterScreen"
    Background="{DynamicResource MahApps.Brushes.Accent2}">

    <mah:MetroWindow.Resources>
        <converters:Base64ToImageConverter x:Key="Base64ToImageConverter" />
        <converters:SelectedBackgroundConverter x:Key="SelectedBackgroundConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </mah:MetroWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Верхняя панель с кнопками  -->
        <StackPanel
            Grid.Row="0"
            Margin="32,24,32,0"
            Orientation="Vertical">
            <StackPanel HorizontalAlignment="Left" Orientation="Vertical">
                <Button
                    Width="180"
                    Padding="12,6"
                    Command="{Binding OpenPdfCommand}">
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <iconPacks:PackIconFontAwesome
                            Width="24"
                            Height="24"
                            Margin="0,0,8,0"
                            Kind="FilePdfSolid" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Text="Открыть PDF файл" />
                    </StackPanel>
                </Button>
            </StackPanel>
            <TextBlock
                MaxWidth="280"
                Margin="0,10,0,10"
                HorizontalAlignment="Center"
                FontSize="16"
                Foreground="{DynamicResource MahApps.Brushes.AccentBase}"
                Text="{Binding FileName, StringFormat='Выбран файл: {0}'}"
                TextTrimming="CharacterEllipsis"
                TextWrapping="NoWrap" />
            <StackPanel
                Margin="0,0,0,12"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <Button
                    Margin="0,0,10,0"
                    Command="{Binding SaveSelectedCommand}">
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <iconPacks:PackIconFontAwesome
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Width="12"
                            Height="12"
                            Margin="0,0,8,0"
                            Kind="FloppyDiskSolid" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Text="Сохраниить" />
                    </StackPanel>
                    </Button>
                <Button
                    Margin="0,0,10,0"
                    Command="{Binding RasterizeSelectedCommand}">
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <iconPacks:PackIconFontAwesome
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Width="12"
                            Height="12"
                            Margin="0,0,8,0"
                            Kind="BrushSolid" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Text="Растеризовать" />
                    </StackPanel>
                    </Button>
                <Button
                    Margin="0,0,10,0"
                    Command="{Binding DeleteSelectedCommand}">
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <iconPacks:PackIconFontAwesome
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Width="12"
                            Height="12"
                            Margin="0,0,8,0"
                            Kind="TrashCanSolid" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Text="Удалить" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>

        <!--  Сетка страниц  -->
        <Border Grid.Row="1" Background="#AAFFFFFF" Margin="15,0,15 ,15" Padding="0" CornerRadius="10">
            <ScrollViewer                   
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Background="{DynamicResource MahApps.Brushes.Accent4}"
            Margin="32,0,0,32"
            Padding="5"
            VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Pages}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Нужно сделать так чтобы Border при входе курсора мыши на границы Border был эффект тени, 
                                    и увеличение размера Border с Grid внутри -->
                        <Border
                            Width="120"
                            Height="150"
                            Margin="12"
                            CornerRadius="18"
                            SnapsToDevicePixels="True"
                            RenderTransformOrigin="0.5,0.5">
    
                            <!-- Контейнер для всего содержимого -->
                            <Grid x:Name="contentGrid" ClipToBounds="True">
                                <Grid.RenderTransform>
                                    <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1"/>
                                </Grid.RenderTransform>
                                <!-- Основной контент -->
                                <Border Background="{Binding IsSelected, Converter={StaticResource SelectedBackgroundConverter}}"
                                    BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                    CornerRadius="18">
                    
                                    <Grid Background="Transparent">
                                    <!-- Ваш контент без изменений -->
                                        <CheckBox
                                            Width="22"
                                            Height="22"
                                            Margin="6"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Panel.ZIndex="2"
                                            IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                            ToolTip="Выбрать страницу"/>
            
                                        <Button
                                            Width="38"
                                            Height="38"
                                            Panel.ZIndex="2"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Cursor="Hand"
                                            Background="#AAA"
                                            ToolTip="Увеличить страницу"
                                            Style="{DynamicResource MahApps.Styles.Button.Circle}"
                                            Visibility="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Border}, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            Command="{Binding DataContext.ShowZoomCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}">
                                            <iconPacks:PackIconFontAwesome Kind="MagnifyingGlassPlusSolid" Width="26" Height="26"/>
                                        </Button>
                
                                        <Border CornerRadius="12" BorderBrush="Black" Background="{DynamicResource MahApps.Brushes.Accent}" BorderThickness="2" Margin="4">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="32"/>
                                                </Grid.RowDefinitions>
                                                <Image
                                                    Grid.Row="0"
                                                    Margin="12,8,12,4"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Stretch"
                                                    Source="{Binding PageThumbnail, Converter={StaticResource Base64ToImageConverter}}"
                                                    Stretch="UniformToFill"/>
                                        
                                                <TextBlock
                                                    Grid.Row="1"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Bottom"
                                                    FontSize="14"
                                                    FontWeight="SemiBold"
                                                    Margin="0,0,0,5"
                                                    Foreground="#444"
                                                    Text="{Binding PageNumber, StringFormat=Страница {0}}"/>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </Border>
                            </Grid>
    
                            <!-- Триггеры для анимации -->
                            <Border.Triggers>
                                <!-- Анимация при наведении -->
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!-- Анимация масштабирования -->
                                            <DoubleAnimation
                                                Storyboard.TargetName="scaleTransform"
                                                Storyboard.TargetProperty="ScaleX"
                                                To="1.05"
                                                Duration="0:0:0.2"/>
                                            <DoubleAnimation
                                                Storyboard.TargetName="scaleTransform"
                                                Storyboard.TargetProperty="ScaleY"
                                                To="1.05"
                                                Duration="0:0:0.2"/>
                                            
                                            <!-- Анимация тени -->
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="Effect.BlurRadius"
                                                To="15"
                                                Duration="0:0:0.2"/>
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="Effect.Opacity"
                                                To="0.5"
                                                Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
        
                                <!-- Анимация при уходе курсора -->
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="scaleTransform"
                                                Storyboard.TargetProperty="ScaleX"
                                                To="1"
                                                Duration="0:0:0.2"/>
                                            <DoubleAnimation
                                                Storyboard.TargetName="scaleTransform"
                                                Storyboard.TargetProperty="ScaleY"
                                                To="1"
                                                Duration="0:0:0.2"/>
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="Effect.BlurRadius"
                                                To="0"
                                                Duration="0:0:0.2"/>
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="Effect.Opacity"
                                                To="0"
                                                Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
    
                            <!-- Эффект тени (изначально невидимый) -->
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="0" ShadowDepth="5" Color="Black" Opacity="0"/>
                            </Border.Effect>
                        </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>    
        </Border>

        <!--  Прелоадер  -->
        <Grid 
            Grid.Row="0"
            Grid.RowSpan="2"
            
            Background="#FFaaaaaa"
            IsHitTestVisible="{Binding IsLoading}"
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <mah:ProgressRing
                    Width="70"
                    Height="70"
                    IsActive="True" />
                <TextBlock
                    Margin="0,18,0,0"
                    HorizontalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="{StaticResource MahApps.Brushes.AccentBase}"
                    Text="{Binding LoadingStatusText}" />
            </StackPanel>
        </Grid>
    </Grid>
</mah:MetroWindow>