<mah:MetroWindow
    x:Class="PdfViewer.Views.WelcomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:PdfViewer.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:PdfViewer.Views"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PDF Viewer"
    Width="800"
    Height="450"
    GlowBrush="{DynamicResource MahApps.Brushes.Gray}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <mah:MetroWindow.Resources>
        <converters:Base64ToImageConverter x:Key="Base64ToImageConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </mah:MetroWindow.Resources>


    <Grid>
        <!--  Main Content  -->
        <DockPanel Margin="32">
            <!--  Header with greeting and open button  -->
            <StackPanel
                Margin="0,0,0,24"
                VerticalAlignment="Top"
                DockPanel.Dock="Top"
                Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,16,0"
                    VerticalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Text="{Binding Greeting}" />
                <StackPanel
                    MaxWidth="300"
                    HorizontalAlignment="Left"
                    Orientation="Vertical">
                    <Button
                        Width="180"
                        Margin="0,0,0,0"
                        Padding="12,6"
                        Command="{Binding OpenPdfCommand}">
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <iconPacks:PackIconFontAwesome
                                Width="24"
                                Height="24"
                                Margin="0,0,8,0"
                                Kind="FilePdfSolid" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Text="Открыть PDF файл" />
                        </StackPanel>
                    </Button>
                    <TextBlock
                        MaxWidth="280"
                        Margin="0,10,0,0"
                        FontSize="16"
                        Foreground="{DynamicResource MahApps.Brushes.AccentBase}"
                        Text="{Binding Filename, StringFormat='Выбран файл: {0}'}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="NoWrap" />
                </StackPanel>


            </StackPanel>

            <!--  Thumbnails grid  -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Pages}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Width="120"
                                Height="150"
                                Margin="12"
                                Background="{DynamicResource MahApps.Brushes.TextBox.Background}"
                                BorderBrush="{DynamicResource MahApps.Brushes.TextBox.Border}"
                                BorderThickness="1"
                                ClipToBounds="True"
                                CornerRadius="18"
                                Effect="{DynamicResource MahApps.ShadowEffect}"
                                SnapsToDevicePixels="True">
                                <Grid>
                                    <Image
                                        Width="96"
                                        Height="96"
                                        Margin="12,8,12,34"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Source="{Binding PageThumbnail, Converter={StaticResource Base64ToImageConverter}}"
                                        Stretch="UniformToFill" />
                                    <Border
                                        Height="32"
                                        Margin="0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Bottom"
                                        Background="#FFF"
                                        CornerRadius="0,0,12,12">
                                        <TextBlock
                                            Margin="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="#444"
                                            Text="{Binding PageNumber, StringFormat='Страница {0}'}" />
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </DockPanel>

        <!--  Loading overlay (centered spinner)  -->
        <Grid
            Background="#80000000"
            IsHitTestVisible="{Binding IsLoading}"
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <mah:ProgressRing
                    Width="70"
                    Height="70"
                    IsActive="True" />
                <TextBlock
                    Margin="0,18,0,0"
                    HorizontalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Загрузка PDF..." />
            </StackPanel>
        </Grid>
    </Grid>

</mah:MetroWindow>
